package BankAcc;
import java.math.*;

import customers.*;

public abstract class Bank {

	public BigDecimal balance=new BigDecimal(0);
	private BigDecimal interestRate=new BigDecimal(0);
	private Customer customer;
	
	public BigDecimal getBalance() {
		return balance;
	}
	public void setBalance(BigDecimal balance) {
		this.balance = balance;
	}
	public BigDecimal getInterestRate() {
		return interestRate;
	}
	public void setInterestRate(BigDecimal interestRate) {
		this.interestRate = interestRate;
	}
	public Customer getCustomer() {
		return customer;
	}
	public void setCustomer(Customer customer) {
		this.customer = customer;
	}
	
	public Bank(BigDecimal balance,BigDecimal interestRate,Customer customer ) {
		setBalance(balance);
		setInterestRate(interestRate);
		setCustomer(customer);
	}
	
	public  void deposit(BigDecimal sum){
		this.balance.add(sum);
	}
	
	public BigDecimal calcInterestAmount(BigDecimal months){
		BigDecimal interest=this.interestRate;
		interest.multiply(months);
		return interest;
	}
	
}
