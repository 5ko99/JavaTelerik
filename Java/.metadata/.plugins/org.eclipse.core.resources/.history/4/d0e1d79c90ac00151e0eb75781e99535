package Recursion;

public class Labirinte {
	public static int count=0;
	public static char[][] lab = {
		    {' ', ' ', ' ', '*', ' ', ' ', ' '},
		    {'*', '*', ' ', '*', ' ', '*', ' '},
		    {' ', ' ', ' ', ' ', ' ', ' ', ' '},
		    {' ', '*', '*', '*', '*', '*', ' '},
		    {' ', ' ', ' ', ' ', ' ', ' ', 'e'},
		};
	
	public static void main(String[] args){
		solve(0,0);
		System.out.println(count);
	}
	
	private static void solve(int row, int col) {
		//bottom
		if(row<0 || row>lab[0].length || col<0 || col>lab.length){ //outside labyrinth
			return;
		}
		
		if(lab[row][col]=='*' || lab[row][col]=='x'){
			return;
		}
		
		if(lab[row][col]=='e'){
			count++;
			return;
		}
		
		//mark spot
		lab[row][col]='x';
		
		//go left
		solve(row,col-1);
		
		//go up
		solve(row-1,col);
		
		//go right
		solve(row,col+1);
		
		//go bottom
		solve(row+1,col);
		
		//unmark spot
		lab[row][col]=' ';
		
	}
}
