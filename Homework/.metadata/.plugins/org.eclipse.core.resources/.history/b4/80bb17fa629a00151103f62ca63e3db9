package animalHierarchy;

public class AnimalStartup {
	public static void main(String[] args){
		Dog[] dogs = new Dog[10];
		Kitten[] kit = new Kitten[10];
		
		for (int i = 0; i < dogs.length; i++) {
			dogs[i].setName("Pesho"+i);
			dogs[i].setAge(i);
			dogs[i].setSex("f");
		}
		
		for (int i = 0; i < kit.length; i++) {
			kit[i].setName("Kotence"+i);
			kit[i].setAge(i);
		}
		
		System.out.println(dogs.av);
		
	}
	
	public static double averageAge(Dog[] a){
		int sum=0;
		int n=a.length;
		double result=0;
		for (int i = 0; i < a.length; i++) {
			sum+=a[i].getAge();
		}
		result=sum/n;
		return result;
	}
	
}
